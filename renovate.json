{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "America/Los_Angeles",
  "schedule": [
    "before 8am every weekday"
  ],
  "packageRules": [
    {
      "groupName": "Go modules",
      "groupSlug": "go-modules",
      "matchDatasources": [
        "go",
        "gomod"
      ],
      "matchPackagePatterns": [
        "*"
      ]
    },
    {
      "groupName": "Bazel",
      "groupSlug": "bazel",
      "matchCategories": [
        "bazel"
      ],
      "matchDepTypes": [
        "http_archive"
      ],
      "matchPackagePatterns": [
        "*"
      ]
    }
  ]
}
